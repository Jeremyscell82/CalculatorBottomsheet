<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="calculator_button">
        <item name="android:textSize">28sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
    </style>

    <style name="font_floor_calc">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="font_floor_title">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/textOnBackground</item>
    </style>

    <style name="make_clickable">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

</resources>
